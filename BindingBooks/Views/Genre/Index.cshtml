@using BindingBooks.Models

@model IEnumerable<Genre>


@{
    ViewBag.Title = "Index";
    
}

<br/>
<h2 id="page-title">Manage Genres</h2>
<hr/>

<table id="genre-table" class="table table-hover">
    <tr class="table-header">
        <th>
            @Html.DisplayNameFor(m=>m.Name)
        </th>
        <th>
            @Html.DisplayNameFor(m=>m.Id)
        </th>
        <th></th>
        <th></th>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td class="name">
                @Html.DisplayFor(m=>item.Name)
            </td>
            <td>
                @Html.DisplayFor(m=>item.Id)
            </td>
            <td>
                @Html.Partial("_TableButtonPartial", new IndividualButtonPartial
                {
                    Id = item.Id
                })
            </td>
        </tr>
    }
</table>

@Html.Partial("_CreateButtonPartial")