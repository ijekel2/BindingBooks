@using BindingBooks.Models

@model IEnumerable<Genre>


@{
    ViewBag.Title = "Index";
    
}

<h2>Genre</h2>


<table class="table table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(m=>m.Name)
        </th>
        <th></th>
        <th></th>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m=>item.Name)
            </td>
            <td>
                @Html.Partial("_TableButtonPartial", new IndividualButtonPartial
                {
                    Id = item.Id
                })
            </td>
        </tr>
    }
</table>

@Html.Partial("_CreateButtonPartial")