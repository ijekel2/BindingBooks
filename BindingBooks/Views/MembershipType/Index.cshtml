@using BindingBooks.Models

@model IEnumerable<MembershipType>


@{
    ViewBag.Title = "Membership Types";
    
}

<h3>Manage Membership Types</h3>


<table class="table table-condensed table-hover">
    <tr class="table-header">
        <th>
            @Html.DisplayNameFor(m=>m.Name)
        </th>
        <th>
            @Html.DisplayNameFor(m=>m.SignUpFee)
        </th>
        <th>
            @Html.DisplayNameFor(m=>m.ChargeRateOneMonth)
        </th>
        <th>
            @Html.DisplayNameFor(m=>m.ChargeRateSixMonth)
        </th>
        <th></th>
        <th></th>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m=>item.Name)
            </td>
            <td>
                @Html.DisplayFor(m=>item.SignUpFee)
            </td>
            <td>
                @Html.DisplayFor(m=>item.ChargeRateOneMonth)
            </td>
            <td>
                @Html.DisplayFor(m=>item.ChargeRateSixMonth)
            </td>
            <td>
                @Html.Partial("_TableButtonPartial", new IndividualButtonPartial
                {
                    Id = item.Id
                })
            </td>
        </tr>
    }
</table>

<p>
    @Html.Partial("_CreateButtonPartial")
</p>

